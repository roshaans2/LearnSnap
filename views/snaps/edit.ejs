<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">Edit Campground</h1>
    <div class="col-6 offset-3">
        <form action="/snaps/<%= snap.id %>?_method=PUT" method="post" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="title">Title:</label>
                <input class="form-control" type="text" name="title" id="title" value="<%= snap.title %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="content">Content</label>
                <textarea class="form-control" type="text" name="content" id="content" required><%= snap.content %></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="category">Category:</label>
                <input class="form-control" type="text" name="category" id="category" value="<%= snap.category %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Edit Snap</button>
            </div>
        </form>
        <a href="/snaps/<%= snap.id %>">Back to Snaps</a>
    </div>
</div>
        